@each((amount, item) in inventory)
	@if(amount > 0)
		<p class="my-0.5 flex items-center space-x-2">
			<span class="px-2 bg-gradient-to-br from-gray-600 to-gray-700 text-gray-100 rounded font-mono">{{ amount }}</span>
			<span class="text-gray-300">{{ t(`items.${ item }`) }}</span>
		</p>
	@end
@end
